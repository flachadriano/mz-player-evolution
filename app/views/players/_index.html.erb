<table class=players>
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
		</tr>
	</thead>

	<tbody>
		<% @players.each do |player| %>
			<tr>
				<td style="text-align: center"><%= link_to player.number, player_path(player.id) %></td>
				<td><%= link_to player.name, player_path(player.id) %></td>
			</tr>
		<% end %>
	</tbody>
</table>