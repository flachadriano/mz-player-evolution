<table style="width:100%; margin:0">
	<tr>

		<td><%= render 'index' %></td>

		<td valign="top" style="width: 100%; height: 100%; padding: 2em">

			<div class=player>
				<%= @player.number %> - <%= @player.name %>

				<br/>
				<br/>

				<% [:speed, :stamina, :play_intelligence, :passing, :shooting, :header, :keeping, 
					:ball_control, :tackling, :cross_balls, :set_plays, :experience, :form].each do |attr| %>
					<strong><%= attr %>: </strong><%= @player.attributes.send(attr) %><br/><br/>
				<% end %>
			</div>

		</td>

	</tr>
</table>